%section.banner
  .banner__inner
    .banner__inner__title
      %h2.banner__inner__title__main もらいもの　×　ものがたり
      .banner__inner__title__sub プレゼントでもらったものを、体験と一緒に紹介するサイト
    .banner__inner__content
      .banner__inner__content__look
        %p.banner__inner__content__look__inner ものがたりを見る
      = link_to new_post_path, class: "banner__inner__content__post" do
        %p.banner__inner__content__post__inner ものがたりを投稿する
%section.wrapper
  .wrapper__title 新着投稿
  %ul.wrapper__posts
    - @posts.each do |post|
      %li.wrapper__posts__post
        = link_to post_path(post) do
          = image_tag post.images[0].image.url, class: "wrapper__posts__post__img"
          %p.wrapper__posts__post__title=post.title
          .wrapper__posts__post__tag
            - post.tags.each do |tag|
              %p=tag.name
          .wrapper__posts__post__bottom
            %p.wrapper__posts__post__bottom__user=post.user.nickname + "さん"
            %p.wrapper__posts__post__bottom__date=post.created_at.strftime("%Y/%m/%d %H:%M")
  .wrapper__more
    %p.wrapper__more__text もっと見る
    = icon "fas", "angle-double-right", class: "wrapper__more__icon"